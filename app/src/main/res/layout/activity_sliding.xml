    <TextView
        android:id="@+id/operatingHoursDisplay"
        android:layout_width="157dp"
        android:layout_height="30dp"
        android:layout_below="@+id/operatingDaysDisplay"
        android:layout_marginLeft="33dp"
        android:lineSpacingExtra="7sp"
        android:text="Operating Hours: "
        android:textAlignment="gravity"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/operatingHoursField_Start"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_below="@+id/operatingDaysDisplay"
        android:layout_toRightOf="@+id/operatingHoursDisplay"
        android:lineSpacingExtra="7sp"
        android:textAlignment="gravity"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/address"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/operatingHoursField_Start"
        android:layout_alignLeft="@+id/operatingHoursDisplay"
        android:layout_alignRight="@+id/operatingHoursField_Start"
        android:layout_alignStart="@+id/operatingHoursDisplay"
        android:layout_below="@+id/operatingHoursDisplay"
        android:lineSpacingExtra="7sp"
        android:textAlignment="gravity"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/operatingDaysDisplay"
        android:layout_alignStart="@+id/operatingDaysDisplay"
        android:layout_alignEnd="@+id/address"
        android:layout_alignRight="@+id/address"
        android:layout_below="@+id/address"
        android:lineSpacingExtra="7sp"
        android:textAlignment="gravity"
        android:textSize="20sp" />

