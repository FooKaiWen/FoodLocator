<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:focusable="false"
    android:id="@+id/dragView"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="13dp"
            android:lineSpacingExtra="14sp"
            android:textAlignment="gravity"
            android:textSize="30sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/restaurantImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/subaidah" />

    <Space
        android:id="@+id/centerAnchor"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/restaurantImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurantImage"
        android:layout_toLeftOf="@+id/centerAnchor"
        android:layout_toStartOf="@+id/centerAnchor"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:foregroundGravity="center_horizontal"
        android:text="Call" />

    <Button
        android:id="@+id/transportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurantImage"
        android:layout_toEndOf="@+id/centerAnchor"
        android:layout_toRightOf="@+id/centerAnchor"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:foregroundGravity="center_horizontal"
        android:text="Uber"
         />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/operatingDaysDisplay"
        android:layout_width="148dp"
        android:layout_height="30dp"
        android:layout_below="@+id/callButton"
        android:layout_marginLeft="42dp"
        android:lineSpacingExtra="7sp"
        android:text="Operating Days: "
        android:textAlignment="gravity"
        android:textSize="20sp" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/operatingDaysField_Start"
        android:layout_width="51dp"
        android:layout_height="30dp"
        android:layout_below="@+id/callButton"
        android:layout_toRightOf="@+id/operatingDaysDisplay"
        android:lineSpacingExtra="7sp"
        android:textAlignment="gravity"
        android:textSize="20sp" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/to1"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_below="@+id/callButton"
        android:layout_toRightOf="@+id/operatingDaysField_Start"
        android:lineSpacingExtra="7sp"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:text=" to "/>

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/operatingDaysField_End"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/callButton"
        android:layout_toRightOf="@+id/to1"
        android:lineSpacingExtra="7sp"
        android:textAlignment="gravity"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/operatingHoursDisplay"
        android:layout_width="157dp"
        android:layout_height="30dp"
        android:layout_below="@+id/operatingDaysDisplay"
        android:layout_marginLeft="33dp"
        android:lineSpacingExtra="7sp"
        android:text="Operating Hours: "
        android:textAlignment="gravity"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/operatingHoursField_Start"
        android:layout_width="51dp"
        android:layout_height="30dp"
        android:layout_below="@+id/operatingDaysDisplay"
        android:layout_toRightOf="@+id/operatingHoursDisplay"
        android:lineSpacingExtra="7sp"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:text=" 44:44"/>

    <TextView
        android:id="@+id/to2"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_below="@+id/operatingDaysDisplay"
        android:layout_toRightOf="@+id/operatingHoursField_Start"
        android:lineSpacingExtra="7sp"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:text=" to "/>

    <TextView
        android:id="@+id/operatingHoursField_End"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/operatingDaysDisplay"
        android:layout_toRightOf="@+id/to2"
        android:lineSpacingExtra="7sp"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:text=" 44:44"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
    <ListView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_marginTop="68dp"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
    </ListView>
    </LinearLayout>
</RelativeLayout>